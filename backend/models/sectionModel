const mongoose = require('mongoose');

const sectionSchema = mongoose.Schema({
    users: {
        type: Array,
        required: true,
        ref: 'User'
    },
    tasks: {
        type: Array,
        required: [true, 'Please add a text value']
    }, 
    text: {
        type: String,
        required: [true, 'Please add a section name']
    }
}, 
{
    timestamps: true,
})

module.exports = mongoose.model('Section', sectionSchema);